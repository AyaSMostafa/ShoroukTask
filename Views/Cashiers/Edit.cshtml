@model ShoroukTask.Models.Cashier

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cashier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Cashier Name</label>
                <input asp-for="CashierName" class="form-control" />
                <span asp-validation-for="CashierName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Branch Name</label>
                <select asp-for="BranchId" class="form-control" asp-items="ViewBag.BranchId"></select>
                <span asp-validation-for="BranchId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
