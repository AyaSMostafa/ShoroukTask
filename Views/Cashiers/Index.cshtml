@model IEnumerable<ShoroukTask.Models.Cashier>

@{
    ViewData["Title"] = "Index";
}

<h1>Cashiers</h1>

<p>
    <button asp-action="Create">
        <a asp-action="Create">Create New</a>
    </button>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Cashier Name
            </th>
            <th>
                Branch Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CashierName)
            </td>
            <td>
                    @if (item.BranchId != null)
                    {
                        @Html.DisplayFor(modelItem => item.Branch.BranchName)
                    }
                    else
                    {
                        <text>No Branch</text>
                    }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

 
