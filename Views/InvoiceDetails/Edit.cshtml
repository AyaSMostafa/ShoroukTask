@model ShoroukTask.Models.InvoiceDetail

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Invoice Details</h1>

<h4>Invoice Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Customer Name</label>
                <select asp-for="InvoiceHeaderId" class="form-control" asp-items="ViewBag.InvoiceHeaderId"></select>
                <span asp-validation-for="InvoiceHeaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Item Name</label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Item Count</label>
                <input asp-for="ItemCount" class="form-control" />
                <span asp-validation-for="ItemCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Item Price</label>
                <input asp-for="ItemPrice" class="form-control" />
                <span asp-validation-for="ItemPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
