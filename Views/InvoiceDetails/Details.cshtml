@model ShoroukTask.Models.InvoiceDetail

@{
    ViewData["Title"] = "Details";
}

<h1>Invoice Details</h1>

<div>
    <h4>Invoice Detail ID: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Item Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class = "col-sm-2">
            Item Count
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemCount)
        </dd>
        <dt class = "col-sm-2">
            Item Price
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemPrice)
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @{var totalPrice = @Model.ItemCount * @Model.ItemPrice;} @totalPrice.ToString()
        </dd>
        <dt class = "col-sm-2">
            Customer Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InvoiceHeader.CustomerName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
